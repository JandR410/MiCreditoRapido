<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@color/white"
    tools:context=".presentation.loanStatus.LoanStatusFragment">

    <ImageView
        android:id="@+id/ivStatusIcons"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_check_circle"
        android:contentDescription="@string/status_icon"
        android:layout_marginBottom="32dp"
        app:tint="@color/green_500" />

    <TextView
        android:id="@+id/tvStatusTitles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/solicitud_exitosa"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvStatusMessages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tu_solicitud_de_cr_dito_ha_sido_procesada_correctamente"
        android:textSize="18sp"
        android:textColor="@color/gray"
        android:textAlignment="center"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/tvLoanIds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/id_de_pr_stamo_ln123456"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="@color/dark_gray"
        android:textAlignment="center"
        android:layout_marginBottom="48dp"
        android:visibility="visible"/>

    <Button
        android:id="@+id/btnGoToHomes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ir_al_inicio"
        android:paddingVertical="12dp"
        android:backgroundTint="@color/blue_500"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="8dp"/>

</LinearLayout>